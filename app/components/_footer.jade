              li.footer__menu-li
                a.footer__menu-link(href=mainLinks[i])= mainNav[i]
            li.footer__menu-li.footer__title
              a(href="http://html.myapp.com.ua/m-hunt/service-video.html") Меню
            -var mainNav = ["For partners", "Отзывы", "Контакты"]
            -var mainLinks = ["http://html.myapp.com.ua/m-hunt/service-video.html", "http://html.myapp.com.ua/m-hunt/testimonials.html", "http://html.myapp.com.ua/m-hunt/contacts.html"]
            -for (var i=0; i<mainNav.length; i++)
              li.footer__menu-li
               a.footer__menu-link(href=mainLinks[i])= mainNav[i]
