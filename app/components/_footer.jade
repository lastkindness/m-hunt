        .footer__title.title-5 Контакты
        .footer__phone.footer__contacts-li
          .icon.icon-phone
          .footer__phone-wrapper
              .footer__phone-item
                a.footer__phone-link(href='tel:+380443835587') +38 (095) 434-35-35
              .footer__phone-item
                a.footer__phone-link(href='tel:+380443835587') +38 (067) 787-35-35
        .footer__email-item.footer__contacts-li
